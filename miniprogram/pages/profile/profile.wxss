/* miniprogram/pages/profile/profile.wxss */
page {
  background-color: #f1f1f1;
}

.header {
  width: 100%;
  height: 480rpx;
  /* fallback for old browsers */
  background: -webkit-linear-gradient(to top, #b6fbff, #83a4d4);
  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to top, #b6fbff, #83a4d4);
  /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatarUrl {
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border: 8rpx solid #fff;
  border-radius: 50%;
}

.nickname {
  font-size: 36rpx;
  margin-top: 20rpx;
  font-weight: 400;
  color: #676464;
}
.nav-item { 
  width: 90%;
  margin: 0 auto;
  padding-right: 90rpx; 
  position: relative; 
  display: flex;
  padding: 0rpx 30rpx;
  min-height: 100rpx;
  background-color: #fff;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.content {
  font-size: 30rpx;
  line-height: 1.6em;
  flex: 1;
}

.text {
  color: #808080;
}

.content .iconfont {
  color:#2e73d9;
  font-weight: 600;
  margin-right: 30rpx;
}

.content .icon-youbianjiantou {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
  bottom: 0;
  color: #808080;
  font-size: 28rpx;
}
